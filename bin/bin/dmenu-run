#!/bin/bash

SHELL="${SHELL:-/bin/bash}"
runfile="$HOME/.cache/dmenu_run"
cmd_names=()
cmd_launch_no=()
n=0

if [[ -e "$runfile" ]]; then
  while read -r line; do
    cmd_names[$n]="${line%:*}"
    cmd_launch_no[$n]="${line##*:}"
    (( n++ ))
  done < "$runfile" 
fi

# alternative to stest : compgen -c 
runcmd="$({
  for cmd in "${cmd_names[@]}"; do
    echo "$cmd"
  done &
  stest -flx ${PATH//:/ } &
} | dmenu -p 'launch')"

if [[ $? -ne 0 ]]; then
  exit
fi

i=0
cmd_in=0
for cmd in "${cmd_names[@]}"; do
  if [[ "$cmd" = "$runcmd" ]]; then
    (( cmd_launch_no[i]++ ))
    cmd_in=1
    break
  fi
  (( i++ ))
done

if [[ $cmd_in -eq 0 ]]; then
  cmd_names[$n]="$runcmd"
  cmd_launch_no[$n]="1"
fi

i=0
for cmd in "${cmd_names[@]}"; do
  echo "$cmd:${cmd_launch_no[$i]}"
  (( i++ ))
done | sort -r -n -k2 -t ':' > "$runfile"

if [[ "${runcmd:$(( ${#runcmd} - 1 )):1}" = '!' ]]; then
  runcmd="${runcmd/\~/$HOME}"
  exec st -e ${runcmd%?}
  #st -e '/bin/bash' '-c' "${runcmd%?}" &
else
  exec $SHELL -c "$runcmd"
  # echo -e "$runcmd" | /bin/bash &
fi

