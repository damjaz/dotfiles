while true; do
  from_to=($(echo -e "en pl\npl en" | dmenu -p 'translate from to:'))

  if [[ $? -ne 0 ]]; then
    exit
  fi

  if [[ ${#from_to[@]} -eq 2 ]]; then
    break
  fi
done

while true; do
  text="$(echo "" | dmenu -p 'translate text:')"

  if [[ $? -ne 0 ]]; then
    exit
  fi

  if [[ "$text" ]]; then
    break
  fi
done

format_trans() {
  local i=0 tmp=""
  local state=0 
  local array=()

  while (( i < ${#trans} )); do
    if (( state )); then # inside "
      if [[ "${trans:$i:1}" = '"' ]]; then
        state=0
        array[${#array[@]}]="$tmp"
        tmp=""
      else
        tmp="${tmp}${trans:$i:1}"
      fi
    else # outside "
      if [[ "${trans:$i:1}" = '"' ]]; then
        state=1
      fi
    fi

    (( i++ ))
  done
  trans=("${array[@]}")
}

trans="$(wget --user-agent="Mozilla/5.0 (X11; Linux i686) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/34.0.1847.137 Safari/537.36" "http://translate.google.com/translate_a/t?client=x&text=$text&hl=${from_to[0]}&sl=${from_to[0]}&tl=${from_to[1]}" -qO-)"
trans="$(echo "$trans" | tr -d '{}[]:,')"
format_trans
output=""

for (( i = 0; i < ${#trans[@]};  )); do
  if [[ "${trans[$i]}" = "trans" ]]; then
    (( i++ ))

    while [[ "${trans[$i]}" != "orig" ]]; do
      output="$output ${trans[$i]}"
      (( i++ ))
    done
    output="[ translation ]\n${output#?}"
  elif [[ "${trans[$i]}" = "terms" ]]; then
    output="$output\n[ ${trans[$(( i - 1 ))]} ]"
    (( i++ ))

    while [[ "${trans[$i]}" != "entry" ]]; do
      output="$output\n${trans[$i]}"
      (( i++ ))
    done
  else
    (( i++ ))
  fi
done

if [[ "$output" ]]; then
  lines=$(echo -e "$output" | wc -l)
  output=$(echo -en "$output" | dmenu -l $lines)

  if [[ $? -eq 0 ]]; then
    echo -n "$output" | xsel -b -i
  fi
fi


