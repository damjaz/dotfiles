#!/bin/bash

user_agent="Mozilla/5.0 (X11; Linux i686) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/34.0.1847.137 Safari/537.36"
input_text=""
output=""
mode=()
cache_file="$HOME/.cache/dmenu_translate"

##########################
# LIST OF LANGUAGES      #
##########################
# af    (Afrikaans)      #
# sq    (Albanian)       #
# ar    (Arabic)         #
# hy    (Armenian)       #
# az    (Azerbaijani)    #
# eu    (Basque)         #
# be    (Belarusian)     #
# bn    (Bengali)        #
# bg    (Bulgarian)      #
# ca    (Catalan)        #
# zh-CN (Chinese)        #
# hr    (Croatian)       #
# cs    (Czech)          #
# da    (Danish)         #
# nl    (Dutch)          #
# en    (English)        #
# eo    (Esperanto)      #
# et    (Estonian)       #
# tl    (Filipino)       #
# fi    (Finnish)        #
# fr    (French)         #
# gl    (Galician)       #
# ka    (Georgian)       #
# de    (German)         #
# el    (Greek)          #
# gu    (Gujarati)       #
# ht    (Haitian-Creole) #
# iw    (Hebrew)         #
# hi    (Hindi)          #
# hu    (Hungarian)      #
# is    (Icelandic)      #
# id    (Indonesian)     #
# ga    (Irish)          #
# it    (Italian)        #
# ja    (Japanese)       #
# kn    (Kannada)        #
# ko    (Korean)         #
# la    (Latin)          #
# lv    (Latvian)        #
# lt    (Lithuanian)     #
# mk    (Macedonian)     #
# ms    (Malay)          #
# mt    (Maltese)        #
# no    (Norwegian)      #
# fa    (Persian)        #
# pl    (Polish)         #
# pt    (Portuguese)     #
# ro    (Romanian)       #
# ru    (Russian)        #
# sr    (Serbian)        #
# sk    (Slovak)         #
# sl    (Slovenian)      #
# es    (Spanish)        #
# sw    (Swahili)        #
# sv    (Swedish)        #
# ta    (Tamil)          #
# te    (Telugu)         #
# th    (Thai)           #
# tr    (Turkish)        #
# uk    (Ukrainian)      #
# ur    (Urdu)           #
# vi    (Vietnamese)     #
# cy    (Welsh)          #
# yi    (Yiddish)        #
##########################

google_translate() {
  local response

  get_input_text
  response="$(wget --user-agent="$user_agent" "http://translate.google.com/translate_a/t?client=x&text=$input_text&hl=$1&sl=$1&tl=$2" -qO-)"
  str2array "$response"
  output=""

  for (( i = 0; i < ${#str_array[@]};  )); do
    if [[ "${str_array[$i]}" = "trans" ]]; then
      (( i++ ))

      while [[ "${str_array[$i]}" != "orig" ]]; do
        output="$output ${str_array[$i]}"
        (( i++ ))
      done
      output="[ translation ]\n${output#?}"
    elif [[ "${str_array[$i]}" = "terms" ]]; then
      output="$output\n[ ${str_array[$(( i - 1 ))]} ]"
      (( i++ ))

      while [[ "${str_array[$i]}" != "entry" ]]; do
        output="$output\n${str_array[$i]}"
        (( i++ ))
      done
    else
      (( i++ ))
    fi
  done
}

urban_dictionary() {
  local response 

  get_input_text
  response="$(wget --user-agent="$user_agent" "http://api.urbandictionary.com/v0/define?term=$input_text" -qO-)"
  str2array "$response"
  output=""

  for (( i = 0; i < ${#str_array[@]}; i++ )); do
    if [[ "${str_array[$i]}" = "definition" ]]; then
      (( i++ ))

      output="$output\n${str_array[$i]}"
    fi
  done
  output="${output#??}"
}

get_input_text() {
  local cached=""
  cache_file="${cache_file}_${mode[0]}"

  if [[ -e "$cache_file" ]]; then
    cached="$(tail -n 100 "$cache_file")"
  else
    touch "$cache_file"
  fi

  while :; do
    input_text="$(echo -en "$cached" | dmenu -p 'text:')"

    if [[ $? -ne 0 ]]; then
      exit
    fi

    if [[ "$input_text" = "!paste" ]]; then
      input_text="$(xsel -b -o)"
    fi

    if [[ "$input_text" ]]; then
      echo "$input_text" >> "$cache_file"
      break
    fi
  done
}

str2array() {
  str_array=()
  # ugly and not fully valid workaround but much faster 
  local str="$(echo -e "$1" | tr -d '{}[],\r' | tr '":\n' ',, ' | tr -s ',')"
  IFS=',' read -a str_array <<< "$str"
}

while :; do
  mode=($(echo -e "en pl\npl en\nurban" | dmenu -p 'dictionary'))

  if [[ $? -ne 0 ]]; then
    exit
  fi

  case ${mode[0]} in
    urban)
      urban_dictionary
      break
      ;;
    *)
      if [[ ${#mode[@]} -eq 2 ]]; then
        src=${mode[0]}
        dst=${mode[1]}
        google_translate $src $dst
        break
      fi
      ;;
  esac
done

if [[ "$output" ]]; then
  output=$(echo -en "$output" | dmenu -l 16)

  if [[ $? -eq 0 ]]; then
    echo -n "$output" | xsel -b -i
  fi
fi




