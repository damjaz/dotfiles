#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

super + w
	bspc window -c

super + f
  bspc window focused -t floating

super + {1-9,0}
	bspc desktop -f ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + space
	dmenu_run

super + Return
  st

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
