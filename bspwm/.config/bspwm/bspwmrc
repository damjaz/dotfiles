#!/bin/bash

. color-scheme

bspc config border_width 1
bspc config window_gap 0
bspc config split_ratio 0.5
bspc config borderless_monocle true
bspc config gapless_monocle true

bspc config focused_border_color "#$COL8"
bspc config normal_border_color "#$COL0"
bspc config presel_border_color "#$COL15"
bspc config focused_locked_border_color "#$COL3"

bspc monitor -d 1 2 3 4
bspc desktop ^2 -l monocle

bspc rule -a xmessage floating=on center=on
bspc rule -a chromium-browser desktop=^2 locked=on
bspc rule -a ncmpcpp floating=on center=on
bspc rule -a dmenu-streams-chat floating=on manage=on border=off
#bspc rule -a mpv desktop=^3 fullscreen=on

# welcome message
aplay ~/bin/ava_hello.wav &
notify-send '<span color="#'"$COL1"'">Welcome '"${USER^}"'</span>'
notify-info
notify-reminders

# reload rss feeds silently
newsbeuter -x reload &

# monitor battery power
notify-battery &

# EUR exchange rate
~/projects/alior-currency/alior &
